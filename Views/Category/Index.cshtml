@model List<Category>
<div class=container>
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">
				Category List
			</h2>
		</div>
		<div class="col-6 text-end p-3" >
			<a  asp-controller="Category"  asp-action="Create" class="btn btn-primary">
				Create New category
			</a>
		</div>
	</div>
<table class="table table-striped table-info table-bordered table-light table-borderless table-hover">
	<thead>
	<tr>
		<th>
			Category List
		</th>
		<th>
			Display Order
		</th>
	</tr>
	</thead>
	<tbody>
	@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
	{
		<tr>
			<td>@obj.Name</td>
			<td>@obj.DisplayOrder</td>
			<td>
				<div class="w-75 btn-group" role="group">
					<a asp-action="Edit" asp-controller="Category"  asp-route-id="@obj.Id"   class="btn btn-light mx-2">
						<i class="bi bi-pencil-square"></i>Edit
					</a>
<a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
	Delete
</a>
				</div>
			</td>
		</tr>
	}
	</tbody>
</table>
</div>
